<div class="wizard" data-initialize="wizard" id="registerWizard" data-restrict="previous">
    <div class="steps-container">
        <ul class="steps">
                <li data-step="1" data-name="campaign" class="active">
                    <span class="badge">1</span>Details
                    <span class="chevron"></span>
                </li>
                <li data-step="2">
                    <span class="badge">2</span>Photo
                    <span class="chevron"></span>
                </li>
        </ul>
    </div>

    <div class="step-content">
   
        
        <div class="step-pane active sample-pane alert" data-step="1" id="register-step1">
            {% if not auth.check %}
                {% include 'registerForm.twig' %}
            {% endif %}
        </div>
        <div class="step-pane sample-pane bg-info alert" data-step="2">
        {% if auth.check %}
        <form method="post" action="{{ path_for('upload') }}">
         
            {% include "uploadForm.twig" %}
                
        </form>
        {% endif %}
        </div>
        
        <div class="actions">
            <!-- <button type="button" class="btn btn-default btn-prev">
            <span class="glyphicon glyphicon-arrow-left"></span>Prev</button> -->
            <button type="button" class="btn btn-primary btn-next" id="registerSumit" data-last="Complete">Next
            <span class="glyphicon glyphicon-arrow-right"></span></button>
        </div>
        
    </div>
</div>