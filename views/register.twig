<form method="post" action="{{ path_for('register')}}" autocomplete="off">
       {{ errors | json_encode }}
        {{ oldInput | json_encode }}
        <div class="step-pane active sample-pane alert" data-step="1">
            <h4>Account Details</h4>
            <p>You're about to have people say mean things about you.</p>
            <div class="form-group{{ errors.email ? ' has-error' : '' }}">
                <input type="text" placeholder="Email" name="email" vlaue="{{ oldInput.email }}"  id="register-email" class="form-control">
                {% if errors.email %}
                    <span class="help-block">{{ errors.email | first }}</span>
                {% endif %}
            </div>
            <div class="form-group{{ errors.username ? ' has-error' : ''}}">
                <input type="username" placeholder="Username" name="username" vlaue="{{ oldInput.username }}" id="register-username" class="form-control">
                {% if errors.username %}
                    <span class="help-block">{{ errors.username | first }}</span>
                {% endif %}
            </div>
            <div class="form-group{{ errors.password ? ' has-error' : ''}}">
                <input type="password" placeholder="Password" name="password" id="register-password" class="form-control">
                {% if errors.password %}
                    <span class="help-block">{{ errors.password | first }}</span>
                {% endif %}            
            </div>
            <div class="form-group{{ errors.password ? ' has-error' : ''}}">
                <input type="password" placeholder="Verify Password" name="password2" id="register-password2" class="form-control">
            </div>
            <input type="submit" name="submit" value="Submit">
            {{ csrf.field | raw }}
        </div>
    
</form>