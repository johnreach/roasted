<form action="{{ path_for('login') }}" method="post" id="loginForm">

    <div class="form-group{{ errors.loginFailed ? ' has-error' : ''}}">
        
        {% if errors.loginFailed %}
            <span class="help-block">Incorrect login details</span>
        {% endif %}
        
        <input type="text" placeholder="Email" name="email" class="form-control">
    </div>
    <div class="form-group{{ errors.loginFailed ? ' has-error' : ''}}">
        <input type="password" placeholder="Password" name="password" class="form-control">
    </div>
    
    <button type="submit" id="loginSubmit" class="btn btn-primary">Sign in</button>
   {{ csrf.field | raw }}
</form>