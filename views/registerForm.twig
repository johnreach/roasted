<form method="post" action="{{ path_for('register')}}" autocomplete="off" id="registerForm">

    <h4>Account Details</h4>
    <p>You're about to have people say mean things about you.</p>

    <div class="form-group{{ errors ? (errors.email ? ' has-error' : ' has-success') : '' }}">
        <input type="text" placeholder="Email" name="email" value="{{ oldInput.email }}"  id="register-email" class="form-control">
        {% if errors.email %}
            <span class="help-block">{{ errors.email | first }}</span>
        {% endif %}
    </div>
    <div class="form-group{{ errors ? (errors.username ? ' has-error' : ' has-success') : '' }}">
        <input type="username" placeholder="Username" name="username" value="{{ oldInput.username }}" id="register-username" class="form-control">
        {% if errors.username %}
            <span class="help-block">{{ errors.username | first }}</span>
        {% endif %}
    </div>
    <div class="form-group{{ errors ? (errors.password or errors.password2 ? ' has-error' : ' has-success') : '' }}">
        <input type="password" placeholder="Password" name="password" id="register-password" class="form-control">
        {% if errors.password or errors.password2 %}
            <span class="help-block">{{ errors.password | first }}</span>
        {% endif %}            
    </div>
    <div class="form-group{{ errors ? (errors.password or errors.password2 ? ' has-error' : ' has-success') : '' }}">
        <input type="password" placeholder="Verify Password" name="password2" id="register-password2" class="form-control">
        {% if errors.password or errors.password2 %}
            <span class="help-block">{{ errors.password2 ? 'Passwords do not match' : '' }}</span>
        {% endif %}     
    </div>

    {{ csrf.field | raw }}
</form>
